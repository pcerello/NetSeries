<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        {% block stylesheets %} 
            <link href="{{ asset('css/menu.css') }}" type="text/css" rel="stylesheet">
        {% endblock %}
    </head>
    <style>
        span {
            color: #4399FF;
        }
    </style>
    <body>

        <div id="menu">
            <div id="logo">
                <a href="{{  path('app_home')  }}"><img src={{ asset('images/Logo.png') }} alt="ACME logo"></a>
                <a id="logo_text" href="{{  path('app_home')  }}"><strong><span>Net</span></strong>Series</a>
            </div>

            <div id="buttons">

                {% if app.user %}
                    {% if app.user.isAdmin() %}
                        <div class="button square">
                            <a href="{{  path('app_user_index')  }}"><img src="{{ asset('images/icons/users-list.svg') }}"></a>
                        </div>
                    {% endif %}

                    {# On test si un administrateur est en train d'incarner un utilisateur#}
                    {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                        {# On affiche qui il incarne #}
                        <p>I incarnate : {{ app.user.email }}</p>

                        {# On ajoute le bouton 'désincarner' pour se désincarné d'un utilisateur #}
                        <div class="button">
                            <a class="dropdown-item" href="{{ path('app_user_index', {'_switch_user': '_exit'}) }}">Désincarner</a> 
                        </div>
                    {% endif %}
                    
                    
                    <a>
                        <div class="user__profile">
                            <img class="" src="{{ asset('images/icons/user-profile.svg') }}">
                        </div>
                        {{ app.user.name }}
                    </a>
                    <div class="button square">
                        <a href="{{  path('app_logout')  }}"><img src="{{ asset('images/icons/logout.svg') }}"></a>
                    </div>

                    {% else %}
                    <div class="button">
                        <a href="{{  path('app_login')  }}">Login</a>
                    </div>

                    <div class="button" id="signUp">
                        <a href="{{  path('app_register')  }}">Sign up now !</a>
                    </div>
                {% endif %}
            </div>
        </div>

        {% block body %}{% endblock %}
    </body>
</html>