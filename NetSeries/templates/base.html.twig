<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link href="{{ asset('css/menu.css') }}" rel="stylesheet">
        {% block stylesheets %}{% endblock %}
    </head>
    <style>
        span {
            color: #4399FF;
        }
    </style>
    <body>

        <div id="menu">
            <div id="logo">
                <a href="{{  path('app_home')  }}"><img src={{ asset('images/Logo.png') }} alt="ACME logo"></a>
                <a id="logo_text" href="{{  path('app_home')  }}"><strong><span>Net</span></strong>Series</a>
            </div>

            <div id="buttons">

            {% if app.user %}
                {% if app.user.isAdmin() %}
                    <div class="button">
                        <a href="{{  path('app_user_index')  }}">User list</a>
                    </div>
                {% endif %}

                
                [{{ app.user.email }}]
                <div class="button">
                    <a href="{{  path('app_logout')  }}">Logout</a>
                </div>

                

                {% else %}
                <div class="button">
                    <a href="{{  path('app_login')  }}">Login</a>
                </div>

                <div class="button" id="signUp">
                    <a href="{{  path('app_register')  }}">Sign up now !</a>
                </div>
                {% endif %}
            </div>
        </div>

        {% block body %}{% endblock %}
    </body>
</html>