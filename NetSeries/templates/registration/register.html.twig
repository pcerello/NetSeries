{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="login-box">
        <h1>Register</h1>

         <div class="input-group mb-3">
        <div class="input-group-prepend"><span class="input-group-text" aria-label="arobase">ðŸ™‚</span></div>
        <input type="email" value="" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Username">    
    </div>

        {{ form_start(registrationForm) }}
        <div class="input-group mb-3">
            <div class="input-group-prepend"><span class="input-group-text" aria-label="arobase">ðŸ™‚</span></div>
