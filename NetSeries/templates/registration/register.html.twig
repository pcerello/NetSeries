{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="login-box">
        <h1>Register</h1>
         

        {{ form_start(registrationForm) }}
        <div class="input-group mb-3">
        <div class="input-group-prepend"><span class="input-group-text" aria-label="arobase">🙂</span></div>
        {{ form_row(registrationForm.name , {
            attr: {
            placeholder: 'Name'

        }
        }) }}
        </div>


        <div class="input-group mb-3">
        <div class="input-group-prepend"><span class="input-group-text" aria-label="arobase">✉️</span></div>
        {{ form_row(registrationForm.email, {
            attr: {
            placeholder: 'Email'

        }
        }) }}

        </div>

        <div class="input-group mb-3">
        <div class="input-group-prepend"><span class="input-group-text" aria-label="arobase">🌎</span></div>
        {{ form_row(registrationForm.country,{            
            attr: {
                placeholder: 'Country'
        }
    }) }}
        </div>

        <div class="input-group mb-3">
        <div class="input-group-prepend"><span class="input-group-text" aria-label="arobase">🔐</span></div>
        {{ form_row(registrationForm.plainPassword, {
            attr: {
                placeholder: 'Password'
                
            }
            
        }) }}
        </div>

        
       
        {{ form_row(registrationForm.agreeTerms) }}
        <button class="btn btn-lg btn-primary" type="submit" id="btn-register">Create new account</button>
        {{ form_end(registrationForm) }}

        

        </div>
    </div>
{% endblock %}
{% block stylesheets %}
{{ parent() }}
<link href={{ asset('css/login.css') }} rel="stylesheet">
{% endblock %}