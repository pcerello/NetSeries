{% extends 'base.html.twig' %}

{% block title %}ExternalRating index{% endblock %}

{% block body %}
    <h1>ExternalRating index</h1>

    {# On affiche la note externe imdb si la s√©ries on a une#}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Votes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {# On test si externalRatings n'est pas vide #}
        {% if externalRatings %}
            {# Affichage des ces informations #}
            <tr>
                <td>{{ externalRatings.id }}</td>
                <td>{{ externalRatings.value }}</td>
                <td>{{ externalRatings.votes }}</td>
                <td>
                    {# Lien pour modifier la note externe imdb #}
                    <a href="{{ path('app_external_rating_edit', {'id': externalRatings.id, 'idSerie' : serie.id}) }}">edit</a>
                </td>
            </tr>
        {# Sinon on affiche qu'il contient pas de note externe imdb #}
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
            {# Ajout d'une note externe imdb #}
            <a href="{{ path('app_external_rating_new', {'idSeries' : serie.id}) }}">New external rating</a>
        {% endif %}
        </tbody>
    </table>
{% endblock %}
