{% extends 'base.html.twig' %}

{% block title %}Hello FollowedSeriesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    

    {% if series is empty %}
        Pas de s√©ries suivies.
    {% else %}
        <table>
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Poster</th>
                </tr>
            </thead>
            <tbody>
                {% for series in series %}
                    <tr>
                        <td>{{ series.title }}</td>
                        <td><img id="posterShow" src='{{ path('app_poster_show', {'id': series.id}) }}'></td>
                        <td><a href="{{ path('unfollow_series', {'id': series.id}) }}">Ne plus suivre</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

</div>
{% endblock %}
