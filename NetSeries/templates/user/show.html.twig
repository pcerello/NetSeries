{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>

        </tbody>
    </table>

    <h2> Sa liste de s√©ries qui regarde </h2>
    <table class="table">
        <thead>
            <tr>
                <th>Postere</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
             {% for serie in seriesFollowed %}
                <tr>
                    <td>{{ serie.poster }}</td>
                    <td>{{ serie.title }}</td>
                </tr>
            {% endfor %}

        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(seriesFollowed) }}
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Postere</th>
                <th>Title</th>
                <th>Note</th>
                <th>Critic</th>
            </tr>
        </thead>
        <tbody>
             {% for rating in ratings %}
                <tr>
                    <td>{{ rating.series.poster }}</td>
                    <td>{{ rating.series.title }}</td>
                    <td>{{ rating.value }}</td>
                    <td>{{ rating.comment }}</td>
                </tr>
            {% endfor %}

        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(ratings) }}
    </div>

    <a href="{{ path('app_user_index') }}">back to list</a>
{% endblock %}
