<form method="post" class="button__auth delete" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <img src="{{ asset('images/icons/delete.svg') }}">
    <button class="btn">Delete</button>
</form>
